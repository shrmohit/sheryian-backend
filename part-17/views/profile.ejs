<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta
      name="viewport"
      content="width=device-width, initial-scale=1.0"
    />
    <title>Document</title>
    <link
      rel="stylesheet"
      href="../public/stylesheets/style.css"
    />
    <script src="https://cdn.jsdelivr.net/npm/@tailwindcss/browser@4"></script>
  </head>
  <body>
    <div class="w-full min-h-screen bg-zinc-900 p-10 text-white">
      <div class="w-full flex justify-end">
        <a
          href="/logout"
          class="text-sm bg-red-500 rounded-md px-3 py-2 mb-5 inline-block"
          >Logout</a
        >
      </div>

      <h3 class="text-3xl">Hello,Harsh Vandana Sharma</h3>
      <h5 class="mb-5">you can create a new post</h5>
      <form
        action="/post"
        method="post"
      >
        <textarea
          placeholder="What's on your mind ?"
          class="block w-1/2 h-20 resize-none p-3 bg-zinc-700 mb-5 rounded-md"
          name="content"
        ></textarea>
        <input
          class="px-3 py-2 text-sm bg-blue-500 block mb-5 rounded-lg"
          type="submit"
          value="Create post"
        />
      </form>
      <div class="posts mt-20">
        <h3 class="text-zinc-400">Your Posts.</h3>
        <div class="postcontainer mt-5">
          <% user.posts.reverse().forEach((post)=>{ %>
          <div
            class="posts w-1/3 p-4 mb-5 rounded-md border-2 border-zinc-700 bg-zinc-800"
          >
            <h4 class="text-sm tracking-tight"><%= post.username %></h4>
            <p class="text-sm tracking-tight"><%= post.content %></p>
            <div class="btns flex mt-5 justify-between">
              <a
                class="text-blue-500"
                href=""
                >like</a
              >
              <a
                class="text-zinc-500"
                href=""
                >Edit</a
              >
            </div>
          </div>
          <% })%>
        </div>
      </div>
    </div>

    <script src="../public/javascripts/index.js"></script>
  </body>
</html>
