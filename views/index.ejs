<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta
      name="viewport"
      content="width=device-width, initial-scale=1.0"
    />
    <title>Document</title>
    <script src="https://cdn.jsdelivr.net/npm/@tailwindcss/browser@4"></script>
    <link
      rel="stylesheet"
      href="/stylesheets/styles.css"
    />
  </head>
  <body>
    <div class="main w-full bg-zinc-900 min-h-screen">
      <div class="form p-10">
        <form
          action="/create"
          method="post"
        >
          <input
            type="text"
            placeholder="Title"
            class="block px-5 -y-2 bg-zinc-800 w-full text-white rounded-md"
            name="title"
          />
          <textarea
            placeholder="description"
            class="block px-5 -y-2 bg-zinc-800 w-full mt-5 resize-none text-white rounded-md"
            name="details"
            id=""
          ></textarea>
          <input
            type="submit"
            class="mt-5 bg-blue-900 text-white rounded-md px-2 py-2"
            value="Create task"
          />
        </form>
      </div>
      <div class="task p-10 flex flex-wrap gap-3">
        <%if(files.length > 0){ %> <%files.forEach( (val) =>{%>
        <div class="task w-72 bg-zinc-800 px-3 py-4 rounded-md">
          <h1 class="text-white text-3xl tracking-lighter"><%= val %></h1>
          <div class="flex justify-between mt-3">
            <a
              href="/file/<%= val %>"
              class="text-blue-900"
              >Read More..</a
            >
            <a
              href="/edit/<%= val %>"
              class="text-white"
              >edit username</a
            >
          </div>
        </div>
        <%})%> <%} else {%>
        <h1>no task</h1>
        <% } %>
      </div>
    </div>
    <script src="/javascripts/script.js"></script>
  </body>
</html>
